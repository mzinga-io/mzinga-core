{
  "name": "jest-mzinga",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@mzinga/bundler-webpack": "latest",
    "@mzinga/db-mongodb": "latest",
    "@mzinga/richtext-slate": "latest",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "get-tsconfig": "^4.7.0",
    "mongoose": "6.13.8",
    "mzinga": "latest"
  },
  "devDependencies": {
    "@swc/core": "1.6.1",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.4",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "ts-node": "10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "generate:types": "PAYLOAD_CONFIG_PATH=src/mzinga.config.ts mzinga generate:types",
    "dev": "nodemon",
    "build:mzinga": "PAYLOAD_CONFIG_PATH=src/mzinga.config.ts mzinga build",
    "build:server": "tsc",
    "build": "pnpm run build:server && pnpm run build:mzinga",
    "serve": "PAYLOAD_CONFIG_PATH=dist/mzinga.config.js NODE_ENV=production node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --forceExit --detectOpenHandles"
  }
}