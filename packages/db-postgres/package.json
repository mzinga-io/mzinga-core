    "clean": "rimraf {dist,*.tsbuildinfo}",
    "prepublishOnly": "pnpm clean && pnpm build",
    "version": "npm version"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "console-table-printer": "2.15.0",
    "drizzle-kit": "0.31.6",
    "drizzle-orm": "0.44.7",
    "pg": "8.16.3",
    "prompts": "2.4.2",
    "to-snake-case": "1.0.0",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@mzinga/eslint-config": "workspace:*",
    "@types/pg": "8.15.6",
    "@types/to-snake-case": "1.0.2",
    "mzinga": "workspace:*"
  },
  "peerDependencies": {
    "mzinga": "^0.1.0"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist",
    "mock.js"
