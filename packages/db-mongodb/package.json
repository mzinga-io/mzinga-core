{
  "name": "@mzinga/db-mongodb",
  "version": "0.0.4",
  "description": "The officially supported MongoDB database adapter for MZinga",
  "repository": {
    "type": "git",
    "url": "https://github.com/mzinga-io/mzinga-core.git",
    "directory": "packages/db-mongodb"
  },
  "license": "MIT",
  "homepage": "https://mzinga.io",
  "author": {
    "email": "info@mzinga.io",
    "name": "MZinga",
    "url": "https://mzinga.io"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "pnpm build:swc && pnpm build:types",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf {dist,*.tsbuildinfo}",
    "prepublishOnly": "pnpm clean && pnpm build",
    "version": "npm version"
  },
  "dependencies": {
    "bson-objectid": "2.0.4",
    "deepmerge": "4.3.1",
    "get-port": "5.1.1",
    "http-status": "1.6.2",
    "mongoose": "6.13.8",
    "mongoose-aggregate-paginate-v2": "1.0.6",
    "mongoose-paginate-v2": "1.7.22",
    "prompts": "2.4.2",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@mzinga/eslint-config": "workspace:*",
    "@types/mongoose-aggregate-paginate-v2": "1.0.9",
    "mongodb": "4.17.2",
    "mongodb-memory-server": "^9",
    "mzinga": "workspace:*"
  },
  "peerDependencies": {
    "payload": "^2.0.0"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "registry": "https://registry.npmjs.org/",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist",
    "mock.js",
    "predefinedMigrations"
  ]
}
